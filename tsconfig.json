{
  "compilerOptions": {
    "target": "es2022",
    "rootDirs": ["./src", "./ext"],
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./ext/**/*", "jest.config.ts"]
}
